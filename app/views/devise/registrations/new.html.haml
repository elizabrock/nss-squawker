.row
  .small-12.columns
    %h2 Sign up
.row
  .small-12.medium-6.columns
    .panel
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        .inputs
          = f.input :username, label: 'Username', :autofocus => true
          = f.input :email, label: 'Email'
          = f.input :password, label: 'Password'
          = f.input :password_confirmation, label: 'Password confirmation'
        .actions
          = f.button :submit, 'Sign up', class: 'button radius'
  .small-12.medium-6.columns
    .panel
      %p Alternatively, you can sign up via. Twitter!
      - resource_class.omniauth_providers.each do |provider|
        = link_to "Sign up with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "button"
.row
  .small-3.columns
    = render "devise/shared/links"
