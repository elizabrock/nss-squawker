.row
  .small-offset-3.small-9.columns
    %h2.subheader Sign up

  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    .inputs
      .row
        .small-offset-3.small-6.columns
          = f.input :username, label: 'Username', :autofocus => true
      .row
        .small-offset-3.small-6.columns
          = f.input :email, label: 'Email'
      .row
        .small-offset-3.small-6.columns
          = f.input :password, label: 'Password'
      .row
        .small-offset-3.small-6.columns
          = f.input :password_confirmation, label: 'Password confirmation'
    .actions
      .row
        .small-offset-3.small-3.columns
          = f.button :submit, 'Sign up', class: 'button tiny radius'
.row
  .small-offset-3
    = render "devise/shared/links"
