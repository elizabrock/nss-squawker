.row
  .small-offset-3.small-9.columns
    %h2.subheader Forgot your password?
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    .inputs
      .row
        .small-offset-3.small-6.columns
          = f.input :email, label: 'Email', :autofocus => true
    .actions
      .row
        .small-offset-3.small-6.columns
          = f.button :submit, "Send me reset password instructions", class: 'button tiny radius'
.row
  .small-offset-3
    = render "devise/shared/links"
